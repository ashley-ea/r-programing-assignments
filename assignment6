A <- matrix(c(2, 0, 1, 3), ncol = 2)
B <- matrix(c(5, 2, 4, -1), ncol = 2)

#compute a-b and b-a and display both results
ab <- A - B
ab #prints A-B

ba <- B - A
ba #prints B-A

#create a diagonal martix
D <- diag(c(4, 1, 2, 3))
D #resulting matrix

#construct a custom 5x5 matrix
m5 <- cbind(
  c(3, 2, 2, 2, 2),   # first column
  diag(3, 5)[, -1]    # 5x5 identity
)
m5 #resulting matrix

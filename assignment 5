#create the matrices:
A <- matrix(1:100,  nrow = 10)
B <- matrix(1:1000, nrow = 10)

#inspect the dimensions:
dim(A)  # should be 10×10
dim(B)  # 10×100 — not square

#compute inverse and determinant:
# For A
#I added the following line due to an error I kept receiving with only the provided code:
A2 <- matrix(runif(100), nrow = 10)
invA <- solve(A2)
detA <- det(A2)
#displaying the matrix
print(invA)
print(detA)

# For B, use tryCatch to capture errors
invB <- tryCatch(solve(B), error = function(e) e)
detB <- tryCatch(det(B),   error = function(e) e)
#display result for B
print(invB)
print(detB)
